/*content within the body shall be set to the bottom of the screen*/
body {
  position: fixed;
  border-top: 2px #eee solid;
  padding: 1em 12em;
  margin-top: 1em;
  bottom: 0; right: 0; left: 0;
  height: 25%;
  overflow: auto;
}

/*p1 is the basic format*/
p1 {
  color: ffffff;
  background: 000000;
  font-family: Times New Roman, Times, serif;
}

/*p2 is a format used for written text in game such as notes or letters*/
p2 {
  color: lightblue;
  background: ffffff;
  font-family: Lucida Handwriting, Brush Script M7, cursive;
}

/*p3 is a format used for digital text in game*/
p3 {
  color: green;
  background: ffffff;
  font-family: Lucida Console, Courier New, monospace;
}

/*p4 is a format used for buttons*/
p4 {
  color: blue;
  background: ffffff;
  font-family: Times New Roman, Times, serif;
}
